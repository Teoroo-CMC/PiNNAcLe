# Read Input
units       real
atom_style  full
read_data   init.geo

# NaCl SPCE 
bond_style      harmonic
angle_style     harmonic
dihedral_style  none
improper_style  none
pair_style      lj/cut/coul/long 9.8 9.8
pair_modify     mix arithmetic
kspace_style    pppm 1.0e-4
pair_coeff      1 1   0.0000     2.058
pair_coeff      2 2   0.15535    3.166
pair_coeff      3 3   0.3526418  2.1595384928
pair_coeff      4 4   0.0127850  4.8304528498
bond_coeff      1     1000.00    1.000
angle_coeff     1     100.0      109.47
neighbor        3.0 bin

# IO setup
variable  dump_format         string  "id type x y z fx fy fz"

thermo  1
thermo_modify flush yes
dump    1 all custom 1 label.dump ${dump_format}
log     label.log
rerun   filtered.dump dump x y z
